
<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title> Pratik Ara Bul </title>
    <link href="~/Content/Layoutt.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    

        <nav>
            <div class="navbar">
                <i class='bx bx-menu'></i>
                <div class="logo"><a href="/home/index"><img src="~/images/pratiklogo.png" /></a></div>
                <div class="nav-links">
                    <div class="sidebar-logo">
                        <span class="logo-name">Pratik Ara Bul</span>
                        <i class='bx bx-x'></i>
                    </div>
                    <ul class="links">
                        <li> @Html.ActionLink("Ana Sayfa", "Index", "Home", null, new { @class = "menus" })</li>
                        <li>
                            @Html.ActionLink("Firmaların Müşteri Hizmetleri", "index", "musterihizmetlerinumaralari", null, new { @class = "menus" })
                            <i class='bx bxs-chevron-down htmlcss-arrow arrow  '></i>
                            @Html.Action("Menu", "Home")
                        </li>

                        <li><a href="#">Hakkımızda</a></li>
                        <li><a href="#">İletişim</a></li>
                    </ul>
                </div>
                @using (Html.BeginForm("Arama", "MusteriHizmetleriNumaralari", FormMethod.Get))
                {
                    <div class="search-box">
                        <i class='bx bx-search'></i>
                        <div class="input-box">
                            <input type="text" name="p" placeholder="Aramak istediğiniz..">
                            <input type="submit" value="Ara" style="width:70px;margin-left:105px;"/>

                        </div>
                      
                    </div>
                }
                </div>
        </nav>
      
        <script src="~/Scripts/layoutscript.js"></script>













        <div class="container body-content">
            @RenderBody()
        </div>
        <br />
        <div class="footer-dark">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-3 item">
                            <h3>Uygulamalarımız</h3>
                            <ul>
                                <li><a href="#">Müşteri Hizmetleri İletişim Bilgileri</a></li>
                                <li><a href="#">Hesaplama Araçları</a></li>
                                <li><a href="#">Kalan Gün Sayaçları</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-3 item">

                            <ul>
                                <li><a href="#">İletişim</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                                <li><a href="#">Çerez Politikası</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6 item text">
                            <h3>PRATİK ARA BUL</h3>
                            <p>Hayatı kolaylaştıran pratik, günlük hayatınızda zamandan tasarruf ettiren site !</p>
                        </div>

                    </div>
                    <p class="copyright">pratikarabul.com - Tüm Hakları Saklıdır. © @DateTime.Now.Year</p>
                </div>
            </footer>
        </div>




    </body>

</html>
